{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://journaldigitalhistory.eu/schemas/article-status.json",
  "type": "object",
  "properties": {
    "pids": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "technical_review",
        "peer_review",
        "design_review",
        "copyediting",
        "social",
        "published",
        "archived"
      ]
    }
  },
  "required": ["pids", "status"],
  "additionalProperties": false
}
